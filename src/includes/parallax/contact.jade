.parallax-container.valign-wrapper
  .section.no-pad-bot
    .container
      .row.center
        h3.header.col.s12.cyan-text.text-lighten-1
          i.mdi-content-send

        h5.header.col.s12.light Contact me

  .parallax

    img(src='assets/images/background2.jpg')
