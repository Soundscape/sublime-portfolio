.container
  #contact.scrollspy.section

    .row
      form.col.s12
        .row
          .input-field.col.s6
            input#first_name.validate(type="text")
            label(for="first_name") First Name

          .input-field.col.s6
            input#last_name.validate(type="text")
            label(for="last_name") Last Name

        .row
          .input-field.col.s12
            input#email.validate(type="email" required="")
            label(for="email") E-mail

        textarea.materialize-textarea(placeholder="Your Message" required="")
        button.btn.waves-effect.waves-light.right(type="submit" name="action")
          | Submit
          i.mdi-content-send.right
